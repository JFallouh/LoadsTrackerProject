@* File: Views/Shared/_Layout.cshtml *@
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Total Logistics Load Tracker</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LoadTrackerWeb.styles.css" asp-append-version="true" />
</head>

<body class="app-body">
@{
    var isAuthed = User?.Identity?.IsAuthenticated == true;

    // Best-effort display name
    var displayName =
        User?.Identity?.Name
        ?? User?.FindFirst("UserName")?.Value
        ?? User?.FindFirst("CustomerCode")?.Value
        ?? User?.FindFirst("SelectedCustomerCode")?.Value
        ?? "User";

    var showSheetTools = (ViewData["ShowSheetTools"] as bool?) == true;
}

<header class="app-header">
    <nav class="navbar navbar-expand-lg navbar-dark app-navbar">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center gap-3" asp-controller="Loads" asp-action="Index">
                <img src="~/images/logo.gif" alt="Total Logistics" class="app-logo" />
                <span class="brand-text">Total Logistics Load Tracker</span>
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse" data-bs-target="#appNavbar"
                    aria-controls="appNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="appNavbar">
                <div class="ms-auto d-flex align-items-center gap-2">

                    @* Only show sheet tool buttons on the Loads page *@
                    @if (isAuthed && showSheetTools)
                    {
                        <div class="d-flex align-items-center gap-2 me-2">
                            <button type="button"
                                    class="btn btn-sm btn-outline-light app-icon-btn"
                                    data-bs-toggle="offcanvas"
                                    data-bs-target="#monthPanel"
                                    aria-controls="monthPanel"
                                    title="Month">
                                @* Calendar icon (inline SVG) *@
                                <svg class="app-icon" viewBox="0 0 24 24" aria-hidden="true">
                                    <path d="M7 2a1 1 0 0 1 1 1v1h8V3a1 1 0 1 1 2 0v1h1a3 3 0 0 1 3 3v13a3 3 0 0 1-3 3H5a3 3 0 0 1-3-3V7a3 3 0 0 1 3-3h1V3a1 1 0 0 1 1-1Zm13 9H4v9a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1v-9ZM5 6a1 1 0 0 0-1 1v2h16V7a1 1 0 0 0-1-1H5Z"/>
                                </svg>
                            </button>

                            <button type="button"
                                    class="btn btn-sm btn-outline-light app-icon-btn"
                                    data-bs-toggle="offcanvas"
                                    data-bs-target="#columnsPanel"
                                    aria-controls="columnsPanel"
                                    title="Columns">
                                @* Columns icon (inline SVG) *@
                                <svg class="app-icon" viewBox="0 0 24 24" aria-hidden="true">
                                    <path d="M4 3h16a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2Zm1 4v12h4V7H5Zm6 0v12h2V7h-2Zm4 0v12h4V7h-4Z"/>
                                </svg>
                            </button>
                        </div>
                    }

                    @if (isAuthed)
                    {
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-flex align-items-center gap-2 mb-0">
                            @Html.AntiForgeryToken()
                            <span class="nav-greeting">Hi, @displayName</span>
                            <button type="submit" class="btn btn-sm btn-outline-light">Logout</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>

@* Body as flex column: main expands; footer stays bottom without scrolling *@
<main role="main" class="app-main container-fluid">
    @RenderBody()
</main>

<footer class="app-footer">
    <div class="container-fluid d-flex justify-content-between align-items-center flex-wrap gap-2">
        <div>&copy; @DateTime.Now.Year Total Logistics. All rights reserved.</div>
        <div class="footer-muted">Load Tracker</div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
