@* File: Views/Loads/Index.cshtml *@
@model LoadTrackerWeb.Models.LoadsPageViewModel
@{
    ViewData["Title"] = "Load Tracker";
    ViewData["CanEdit"] = Model.CanEdit && Model.IsEmployee;

    // show the navbar tool icons only on this page
    ViewData["ShowSheetTools"] = true;

    var monthName = new DateTime(Model.Year, Model.Month, 1).ToString("MMMM yyyy");
}

<div class="topbar">
    <div class="title-left">
        <div class="company">TOTAL LOGISTICS GROUP OF COMPANIES</div>
        <div class="customerline">Customer: <b>@Model.CustomerCode</b> @Model.CustomerName</div>
    </div>

    <div class="status-box">
        <table>
            <tr><th>Status</th><th>Load Count</th><th>Percent</th></tr>
            <tr><td>ON-TIME</td><td>@Model.OnTimeCount</td><td>@Model.OnTimePct %</td></tr>
            <tr><td>Late-Carrier</td><td>@Model.LateCarrierCount</td><td>@Model.LateCarrierPct %</td></tr>
            <tr><td>Late â€“ Other</td><td>@Model.LateOtherCount</td><td>@Model.LateOtherPct %</td></tr>
        </table>
    </div>
</div>

@if (Model.Rows == null || Model.Rows.Count == 0)
{
    <div class="no-records">No records for <b>@monthName</b>.</div>
}

<!-- AntiForgery token for JS updates -->
<form id="antiForgeryForm">
    @Html.AntiForgeryToken()
</form>

<table class="sheet" id="loadsTable"
       data-customer="@Model.CustomerCode"
       data-year="@Model.Year"
       data-month="@Model.Month"
       data-canedit="@(Model.CanEdit && Model.IsEmployee ? "1" : "0")">

    <thead>
        <tr class="group-row">
            <th colspan="10" class="group-left">DAILY- FREIGHT &amp; TRANSPORTATION LOG</th>
            <th colspan="6" class="group-right">POD INFORMATION</th>
        </tr>

        <tr class="col-row">
            <th data-col="probill">PROBILL<div class="col-resizer"></div></th>
            <th data-col="bol">BOL #<div class="col-resizer"></div></th>
            <th data-col="order">ORDER #<div class="col-resizer"></div></th>
            <th data-col="po">PO #<div class="col-resizer"></div></th>
            <th data-col="receiver">RECEIVER<div class="col-resizer"></div></th>
            <th data-col="rcity">RECEIVER City<div class="col-resizer"></div></th>
            <th data-col="rprov">RECEIVER PROV.<div class="col-resizer"></div></th>
            <th data-col="pickup">PICK UP DATE<div class="col-resizer"></div></th>
            <th data-col="rad">RAD<div class="col-resizer"></div></th>
            <th data-col="status" class="yellow">CURRENT STATUS<div class="col-resizer"></div></th>

            <th data-col="ddate">DELIVERY DATE<div class="col-resizer"></div></th>
            <th data-col="dtime">DELIVERY TIME<div class="col-resizer"></div></th>
            <th data-col="exception">EXCEPTION<div class="col-resizer"></div></th>
            <th data-col="ontime">ON TIME<div class="col-resizer"></div></th>
            <th data-col="delay">Non-Carrier Delay<div class="col-resizer"></div></th>
            <th data-col="comments">COMMENTS<div class="col-resizer"></div></th>

            @if (Model.CanEdit && Model.IsEmployee)
            {
                <th class="save-col">Save</th>
            }
        </tr>
    </thead>

    <tbody>
        @foreach (var r in Model.Rows)
        {
            <partial name="_LoadRow" model="r" />
        }
    </tbody>
</table>

@* OFFCANVAS: Month *@
<div class="offcanvas offcanvas-end" tabindex="-1" id="monthPanel" aria-labelledby="monthPanelLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="monthPanelLabel">Month</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <form method="get" asp-controller="Loads" asp-action="Index" class="d-grid gap-3">
            <div>
                <label class="form-label">Year</label>
                <select name="year" class="form-select">
                    @for (var y = DateTime.Now.Year - 2; y <= DateTime.Now.Year + 1; y++)
                    {
                        if (y == Model.Year)
                        {
                            <option value="@y" selected>@y</option>
                        }
                        else
                        {
                            <option value="@y">@y</option>
                        }
                    }
                </select>
            </div>

            <div>
                <label class="form-label">Month</label>
                <select name="month" class="form-select">
                    @for (var m = 1; m <= 12; m++)
                    {
                        var label = new DateTime(2000, m, 1).ToString("MMM");
                        if (m == Model.Month)
                        {
                            <option value="@m" selected>@label</option>
                        }
                        else
                        {
                            <option value="@m">@label</option>
                        }
                    }
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Go</button>

            @if (Model.IsEmployee)
            {
                <a class="btn btn-outline-secondary" asp-controller="Loads" asp-action="PickCustomer">Change customer</a>
            }
        </form>
    </div>
</div>

@* OFFCANVAS: Columns *@
<div class="offcanvas offcanvas-end" tabindex="-1" id="columnsPanel" aria-labelledby="columnsPanelLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="columnsPanelLabel">Columns</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="mb-2 hint">View only (saved per browser).</div>

        <div class="column-toggles d-grid gap-2">
            <label><input type="checkbox" data-col="probill" checked /> PROBILL</label>
            <label><input type="checkbox" data-col="bol" checked /> BOL #</label>
            <label><input type="checkbox" data-col="order" checked /> ORDER #</label>
            <label><input type="checkbox" data-col="po" checked /> PO #</label>
            <label><input type="checkbox" data-col="receiver" checked /> RECEIVER</label>
            <label><input type="checkbox" data-col="rcity" checked /> RECEIVER City</label>
            <label><input type="checkbox" data-col="rprov" checked /> RECEIVER PROV.</label>
            <label><input type="checkbox" data-col="pickup" checked /> PICK UP DATE</label>
            <label><input type="checkbox" data-col="rad" checked /> RAD</label>
            <label><input type="checkbox" data-col="status" checked /> CURRENT STATUS</label>
            <label><input type="checkbox" data-col="ddate" checked /> DELIVERY DATE</label>
            <label><input type="checkbox" data-col="dtime" checked /> DELIVERY TIME</label>
            <label><input type="checkbox" data-col="exception" checked /> EXCEPTION</label>
            <label><input type="checkbox" data-col="ontime" checked /> ON TIME</label>
            <label><input type="checkbox" data-col="delay" checked /> Non-Carrier Delay</label>
            <label><input type="checkbox" data-col="comments" checked /> COMMENTS</label>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/signalr/signalr.min.js"></script>
    <script src="~/js/loadtracker.js"></script>
}
